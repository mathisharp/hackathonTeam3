@model IEnumerable<HospitalManagementSystem.Models.DoctorPatientMapping>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DoctorDetails.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PatientDetails.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FromDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ToDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsCancelled)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DoctorDetails.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PatientDetails.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FromDateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ToDateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsCancelled)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
